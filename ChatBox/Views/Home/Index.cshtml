</head>
<body>

    <div id="container">
        <div id="login">
            <a href="Home/login" class="button-login">Login</a>
        </div>
        <div id="signup">
            <a href="Home/signup" class="button-signup">Sign Up</a>
        </div>
        <h1>Login</h1>
        <div id="form-box">
            <form action="#">
                <label for="email">Email or Phone</label><br>
                <input type="text" class="fields" name="email" placeholder="...." required=""><br><br>
                <label for="pass">Password</label><br>
                <input type="password" class="fields" name="pass" placeholder="...." required="">
                <a class="forgot-password" href="#">Forgot Password?</a><br><br><br>
                <input type="submit" class="button" value="Login" id="btnlogin">
            </form>
        </div>

    </div>

</body>
